{
  "name": "yamcp-ui-mcp-hub-tests",
  "version": "1.0.0",
  "description": "Test suite for YAMCP-UI MCP Hub Docker infrastructure",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "supertest": "^6.3.3",
    "dockerode": "^4.0.2",
    "eventsource": "^2.0.2",
    "node-fetch": "^3.3.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "../server.mjs",
      "!**/node_modules/**"
    ],
    "setupFilesAfterEnv": [
      "./setup.js"
    ]
  }
}